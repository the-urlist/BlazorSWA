@inject NavigationManager NavigationManager

<ModalWindow @ref="modal">
  <div class="columns is-gapless is-vcentered is-relative is-mobile">
    <div class="column">
      <h1 class="is-size-4 has-text-weight-medium is-pulled-right">
        Sign in to
      </h1>
    </div>
    <div class="column">
      <img width="100" class="is-pulled-left ml-2" src="/images/logo.svg" />
    </div>
  </div>
  <a id="facebookButton" href="@($"/.auth/login/facebook?post_login_redirect_uri={currentUrl}")"
    class="button is-large is-fullwidth has-text-white">
    <span>
      <i id="facebookIcon" class="fab fa-facebook icon"></i>
      <span class="is-size-5 has-text-weight-medium">with Facebook</span>
    </span>
  </a>
  <br />
  <a id="githubButton" href="@($"/.auth/login/github?post_login_redirect_uri={currentUrl}")"
    class="button is-large is-fullwidth has-text-white">
    <span>
      <i id="githubIcon" class="fab fa-github icon"></i>
      <span class="is-size-5 has-text-weight-medium">with GitHub</span>
    </span>
  </a>
  <br />
  <a id="googleButton" href="@($"/.auth/login/google?post_login_redirect_uri={currentUrl}")"
    class="button is-large is-fullwidth has-text-white">
    <span>
      <i id="googleIcon" class="fab fa-google icon"></i>
      <span class="is-size-5 has-text-weight-medium">with Google</span>
    </span>
  </a>
  <br />
